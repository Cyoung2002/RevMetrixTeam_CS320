<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets --><servlet>
  <servlet-name>ArsenalServlet</servlet-name>
  	<servlet-class>edu.ycp.cs320.lab02.servlet.ArsenalServlet</servlet-class>
  </servlet>
	<servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.AddNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.GameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MultiplyNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.MultiplyNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ShotServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.ShotServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EstablishmentServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.EstablishmentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EventServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.EventServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SessionServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.SessionServlet</servlet-class>
  </servlet>
  
  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.ajax.AddNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.lab02.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings --><servlet-mapping>
  <servlet-name>ArsenalServlet</servlet-name>
  	<url-pattern>/arsenal</url-pattern>
  </servlet-mapping>
	<servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddNumbersServlet</servlet-name>
    <url-pattern>/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GameServlet</servlet-name>
    <url-pattern>/game</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MultiplyNumbersServlet</servlet-name>
    <url-pattern>/multiplyNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShotServlet</servlet-name>
    <url-pattern>/shot</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EstablishmentServlet</servlet-name>
    <url-pattern>/establishment</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EventServlet</servlet-name>
    <url-pattern>/event</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SessionServlet</servlet-name>
    <url-pattern>/session</url-pattern>
  </servlet-mapping>
  <!--Server Config-->

<!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <url-pattern>/ajax/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
